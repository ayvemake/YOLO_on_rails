<% content_for :header do %>
  <h1 class="text-2xl sm:text-3xl font-bold tracking-tight text-gray-900">Tableau de bord</h1>
<% end %>

<!-- Cartes de statistiques -->
<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
  <!-- Carte de statistiques: Taux de conformité -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-4 sm:p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-blue-500 rounded-md p-2 sm:p-3">
          <i class="fas fa-check-circle text-white text-lg sm:text-xl"></i>
        </div>
        <div class="ml-4 sm:ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Taux de conformité</dt>
            <dd>
              <div class="text-base sm:text-lg font-medium text-gray-900">
                <%= number_to_percentage(@conforming_rate, precision: 1) %>
              </div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-4 sm:px-5 py-2 sm:py-3">
      <div class="text-xs sm:text-sm">
        <span class="font-medium text-blue-700">
          Basé sur <%= Analysis.where(status: 'completed').count %> analyses
        </span>
      </div>
    </div>
  </div>

  <!-- Carte de statistiques: Analyses aujourd'hui -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
          <i class="fas fa-calendar-day text-white text-xl"></i>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Analyses aujourd'hui</dt>
            <dd>
              <div class="text-lg font-medium text-gray-900"><%= Analysis.where('created_at >= ?', Date.today).count %></div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-5 py-3">
      <div class="text-sm">
        <span class="font-medium text-green-700">
          <% today_success_rate = Analysis.where('created_at >= ? AND status = ?', Date.today, 'completed').count > 0 ? 
             (Analysis.where('created_at >= ? AND status = ? AND score >= ?', Date.today, 'completed', 0.85).count.to_f / 
             Analysis.where('created_at >= ? AND status = ?', Date.today, 'completed').count * 100) : 0 %>
          <%= number_to_percentage(today_success_rate, precision: 1) %> de conformité
        </span>
      </div>
    </div>
  </div>
</div>

<!-- Analyses récentes -->
<div class="mt-6 sm:mt-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-4 sm:px-6 flex flex-col sm:flex-row justify-between items-start sm:items-center">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Analyses récentes</h3>
        <p class="mt-1 text-sm text-gray-500">Les 10 dernières analyses effectuées</p>
      </div>
      <%= link_to analyses_path, class: "mt-2 sm:mt-0 text-sm font-medium text-blue-600 hover:text-blue-500" do %>
        Voir toutes les analyses <i class="fas fa-arrow-right ml-1"></i>
      <% end %>
    </div>

    <!-- Table responsive -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th scope="col" class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
            <th scope="col" class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden sm:table-cell">Score</th>
            <th scope="col" class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden sm:table-cell">Date</th>
            <th scope="col" class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @recent_analyses.any? %>
            <% @recent_analyses.each do |analysis| %>
              <tr>
                <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  #<%= analysis.id %>
                </td>
                <td class="px-3 sm:px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= analysis_status_color(analysis.status) %>">
                    <%= analysis.status %>
                  </span>
                </td>
                <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden sm:table-cell">
                  <% if analysis.score %>
                    <span class="<%= analysis.conforming? ? 'text-green-600' : 'text-red-600' %>">
                      <%= number_to_percentage(analysis.score * 100, precision: 1) %>
                    </span>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </td>
                <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 hidden sm:table-cell">
                  <%= analysis.created_at.strftime("%d/%m/%Y %H:%M") %>
                </td>
                <td class="px-3 sm:px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to analysis_path(analysis), class: "text-blue-600 hover:text-blue-900" do %>
                    <i class="fas fa-eye"></i>
                    <span class="hidden sm:inline ml-1">Voir</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="px-3 sm:px-6 py-4 text-center text-sm text-gray-500">
                Aucune analyse récente
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
