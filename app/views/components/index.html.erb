<% content_for :header do %>
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">Composants</h1>
    <%= link_to new_component_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
      <i class="fas fa-plus mr-2"></i> Nouveau composant
    <% end %>
  </div>
<% end %>

<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Liste des composants</h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      <%= pluralize(@components.count, 'composant') %> enregistré(s)
    </p>
  </div>

  <div class="border-t border-gray-200">
    <% if @components.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Nom
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Description
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Image de référence
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Détections
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @components.each do |component| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= component.name %>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900">
                    <%= component.description.present? ? component.description : "-" %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if component.reference_image&.attached? %>
                    <div class="h-10 w-10">
                      <%= image_tag url_for(component.reference_image), class: "h-10 w-10 rounded-full object-cover" %>
                    </div>
                  <% else %>
                    <span class="text-gray-400">
                      <i class="fas fa-image"></i>
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= component.analysis_results.count %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex space-x-3">
                    <%= link_to component_path(component), class: "text-blue-600 hover:text-blue-900" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_component_path(component), class: "text-yellow-600 hover:text-yellow-900" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= button_to component_path(component), 
                        method: :delete, 
                        class: "text-red-600 hover:text-red-900",
                        data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer ce composant ?" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <i class="fas fa-box text-gray-400 text-4xl mb-4"></i>
        <p class="text-gray-500">Aucun composant enregistré</p>
        <%= link_to new_component_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
          <i class="fas fa-plus mr-2"></i> Créer un composant
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<% if @components.any? %>
  <div class="mt-4">
    <%= paginate @components, theme: 'tailwind' %>
  </div>
<% end %> 